# Server Configuration
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/calendly-tool

# JWT Configuration
# Generate a secure random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Calendar Configuration
# This token is obtained after OAuth authentication
GOOGLE_ACCESS_TOKEN=REPLACE_WITH_GOOGLE_ACCESS_TOKEN

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com
ADVISOR_EMAIL=advisor@example.com

# HubSpot Configuration
# Get this from HubSpot Developer Portal: https://developers.hubspot.com
HUBSPOT_ACCESS_TOKEN=REPLACE_WITH_HUBSPOT_ACCESS_TOKEN

# LinkedIn Scraping Service URL
LINKEDIN_SCRAPING_SERVICE_URL=https://api.example.com/scrape-linkedin 